@model Pharma.Models.PedidoCliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Venda</h1>

<h4>Tem certeza que deseja excluir essa venda?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotaFiscal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotaFiscal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Cpf)
        </dd>
    </dl>
    
    <form class="d-flex gap-3" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="text-decoration-none btn px-3" style="background-color: #78787833">Voltar</a>

    </form>
</div>
