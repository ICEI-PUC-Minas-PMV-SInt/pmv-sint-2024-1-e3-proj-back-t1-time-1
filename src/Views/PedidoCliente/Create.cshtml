@model Pharma.Models.PedidoCliente

@{
    ViewData["Title"] = "Create";
}

<h1>Criar novo</h1>

<h4>Pedidos de Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DtPedido" class="control-label"></label>
                <input asp-for="DtPedido" class="form-control" />
                <span asp-validation-for="DtPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NtFiscal" class="control-label"></label>
                <input asp-for="NtFiscal" class="form-control" />
                <span asp-validation-for="NtFiscal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPedido" class="control-label"></label>
                <input asp-for="TotalPedido" class="form-control" />
                <span asp-validation-for="TotalPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
