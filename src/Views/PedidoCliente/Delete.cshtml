@model Pharma.Models.PedidoCliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3 class="alert alert-danger" role="alert">Tem certeza que quer <strong>apagar?</strong></h3>
<div class="mt-5">
    <h4>Pedido do cliente:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DtPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DtPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NtFiscal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NtFiscal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.IdCliente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
    </form>
</div>
