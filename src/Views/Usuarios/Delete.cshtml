@model Pharma.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Usuário</h1>

<h4>Tem certeza que deseja excluir esse usuário?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcessoUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcessoUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
    </dl>

    <form class="d-flex gap-3" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a asp-action="Index" class="text-decoration-none btn px-3" style="background-color: #78787833">Voltar</a>
    </form>
</div>
