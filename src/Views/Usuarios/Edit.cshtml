@using Pharma.Models
@model Pharma.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Usuário</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-4" style="margin-bottom:24px">
                <div class="form-group w-100">
                    <label asp-for="AcessoUsuario" class="control-label"></label>
                    <input asp-for="AcessoUsuario" class="form-control" />
                    <span asp-validation-for="AcessoUsuario" class="text-danger"></span>
                </div>
                <div class="form-group w-100">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-4">
                <div class="form-group w-100">
                    <label asp-for="Cargo" class="control-label"></label>
                    <select asp-for="Cargo" class="form-control" asp-items="Html.GetEnumSelectList<Cargos>()"></select>
                    <span asp-validation-for="Cargo" class="text-danger"></span>
                </div>
                <div class="w-100"></div>
            </div>
            <div class="form-group d-flex gap-3" style="margin-top:32px">
                <input type="submit" value="Salvar" class="btn text-white py-2"
                    style="background-color:#04828d; font-weight:700" />
                <a asp-action="Index" class="text-decoration-none btn px-3"
                    style="background-color: #78787833">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
