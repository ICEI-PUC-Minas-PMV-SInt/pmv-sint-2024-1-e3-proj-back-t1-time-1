@model Pharma.Models.Localizacao

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Localizações</h1>

<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex gap-4" style="margin-bottom:24px">
                <div class="form-group w-100">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group w-100">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-4">
                <div class="form-group w-100">
                    <label asp-for="Capacidade" class="control-label"></label>
                    <input asp-for="Capacidade" class="form-control" />
                    <span asp-validation-for="Capacidade" class="text-danger"></span>
                </div>
                <div class="w-100"></div>
            </div>
            <div class="form-group d-flex gap-3" style="margin-top:32px">
                <input type="submit" value="Cadastrar" class="btn text-white py-2" style="background-color:#04828d; font-weight:700" />
                <a asp-action="Index" class="text-decoration-none btn px-3" style="background-color: #78787833">Voltar</a>
            </div>



        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
