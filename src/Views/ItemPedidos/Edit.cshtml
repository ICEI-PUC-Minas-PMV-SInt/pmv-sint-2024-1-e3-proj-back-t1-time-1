@model Pharma.Models.ItemPedido

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Itens de pedidos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdItemProduto" />
            <div class="form-group">
                <label asp-for="QtProduto" class="control-label"></label>
                <input asp-for="QtProduto" class="form-control" />
                <span asp-validation-for="QtProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VlUnitario" class="control-label"></label>
                <input asp-for="VlUnitario" class="form-control" />
                <span asp-validation-for="VlUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VlTotalItem" class="control-label"></label>
                <input asp-for="VlTotalItem" class="form-control" />
                <span asp-validation-for="VlTotalItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label"></label>
                <select asp-for="IdPedido" class="form-control" asp-items="ViewBag.IdPedido"></select>
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
